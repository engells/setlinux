" vim:tabstop=8
" made by: Engells
" date: Nov 29, 2012
" content: key-mapping configures of vim

let mapleader=";" 

" 設定 <F2> ~ <F12>
map <F2> :w<CR>		" 存檔
map <F3> :wq<CR>	" 存檔後離開
map <F4> :q!<CR>	" 不存檔離開
map <F5> :bp<CR>	" 前一個 buffer 檔案
map <F6> :bn<CR>	" 下一個 buffer 檔案
map <F7> :if exists("syntax_on") <BAR>
	\ syntax off <BAR><CR>
	\ else <BAR>
	\ syntax enable <BAR>
	\ endif <CR>			" syntax on/off mode switch
map <F8> :set hls!<BAR>set hls?<CR>	" searching highlight mode switch
map <F9> :set paste!<BAr>set paste?<CR>	" Toggle on/off paste mode switch
set pastetoggle=<F9>
map <F10> <ESC>:read !date<CR>		" 插入日期
map <F11> :%!xxd<CR>			" 呼叫 xxd 做 16 進位顯示
map <F12> :%!xxd -r<CR>			" 回復正常顯示

" Tab Keys
map <Leader>tn :tabnew<CR>
map <Leader>te :tabe
map <Leader>tc :tabc<CR>
map <Leader>ts :tabs<CR>
map <Leader>tm :tabm<CR>

" Window Keys
map <Leader>wh <C-W>h
map <Leader>wj <C-W>j
map <Leader>wk <C-W>k
map <Leader>wl <C-W>l

" NERDTree initial key
nnoremap nt :NERDTree<CR>

" PowerLine clear cache key
map plcc :PowerlineClearCache<CR>

" 設定常用之熱鍵
nmap <Leader>a  ggVG
vnoremap <Leader>y "+y
vnoremap <Leader>x "+x
nmap <Leader>p "+p


