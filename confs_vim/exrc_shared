" vim:tabstop=8
" made by: Engells
" date: Nov 29, 2012
" content: shared configures of vim and gvim

colorscheme torte
set nocompatible
set encoding=utf-8
set nobackup
set autoindent
set history=50
set ruler
set number
set showcmd
set cursorline
highlight cursorline cterm=none ctermbg=Black ctermfg=DarkGreen
set laststatus=2
set statusline=%#filepath#[%{expand('%:p')}]%#filetype#[%{strlen(&fenc)?&fenc:&enc},\ %{&ff},\ %{strlen(&filetype)?&filetype:'plain'}]\ [%l/%L]\ [%3p%%]

