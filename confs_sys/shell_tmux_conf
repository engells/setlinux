# This profile is for my customization
# This file is at $HOME
# vim:ts=2
# example: /usr/share/doc/tmux/examples/, by Nicholas Marriott. Public domain.


# 256 colors, in case to set "tmux -2"
set-option -g default-terminal "screen-256color"
set-option -g display-time 3000

# set the prefix to ^A.
unbind C-b
set -g prefix ^A
bind a send-prefix

# vi-style controls for copy mode
setw -g mode-keys vi

# bind : to command-prompt like vim
bind : command-prompt

# bind a reload key
#bind R source-file ~/.tmux.conf ; display-message "Config reloaded.."
#bind r source-file ${HOME}/.tmux.conf \; display-message "source-file reloaded"

# set Zsh as default Tmux shell
set-option -g default-shell /bin/zsh

# detach ^D d
unbind ^D
bind ^D detach

# window and panel # start with 1
set -g base-index 1
set -g pane-base-index 1

source-file $HOME/.config/zz_my_confs/tmux_conf_apperance
source-file $HOME/.config/zz_my_confs/tmux_conf_panel
source-file $HOME/.config/zz_my_confs/tmux_conf_window
source-file $HOME/.config/zz_my_confs/tmux_conf_z_others


## memo 
##----------
##  set-option -s       # sever option
##  set-option          # session option
##  set-window-option   # window option
##  set-option -g       # global option
##  set-option -g status-position top


